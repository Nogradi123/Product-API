  "host": "localhost:5000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "securityDefinitions": {},
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/product/{id}": {
      "get": {
        "tags": [
          "Products"
        ],
        "description": "Retieve products by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": [
          "Products"
        ],
        "description": "Retrieve All products",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "descritpion": "Limit the number of products displayed",
            "required": false,
            "type": "number"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "autoQuery": false
      }
    }
  }
